<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/bebas_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="150dp"
                android:lineSpacingExtra="-16sp"
                android:textColor="@color/btn_bg"
                android:text="@string/enter_verification_code"
                android:textAlignment="center"
                android:textSize="22sp"
                android:includeFontPadding="false"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:lineSpacingExtra="8sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/gotham_light"               android:text="@string/please_type_the_6_digit_verification_code_sent"
                android:textAlignment="center"
                android:textColor="#979796"
                android:textSize="12sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:fontFamily="@font/gotham_light"
                android:includeFontPadding="false"
                android:id="@+id/user_ph_no"
                android:lineSpacingExtra="8sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#979796"
                android:textAlignment="center"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_one"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_border_white"
                    android:fontFamily="@font/gotham_medium"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <EditText
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_medium"
                    android:maxLength="1"
                    android:id="@+id/et_two"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/et_border_white"
                    android:inputType="number"
                    android:textAlignment="center" />

                <EditText
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_medium"
                    android:maxLength="1"
                    android:id="@+id/et_three"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/et_border_white"
                    android:inputType="number"
                    android:textAlignment="center" />

                <EditText
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_medium"
                    android:maxLength="1"
                    android:id="@+id/et_four"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/et_border_white"
                    android:inputType="number"
                    android:textAlignment="center" />

                <EditText
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_medium"
                    android:maxLength="1"
                    android:textSize="14sp"
                    android:id="@+id/et_five"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_border_white"
                    android:inputType="number"
                    android:textAlignment="center" />

                <EditText
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_medium"
                    android:maxLength="1"
                    android:textSize="14sp"
                    android:id="@+id/et_six"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_border_white"
                    android:inputType="number"
                    android:textAlignment="center" />
            </LinearLayout>
            <TextView
                android:fontFamily="@font/gotham_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:includeFontPadding="false"
                android:text="@string/didn_t_receive_the_verification_code"
                android:textAlignment="center"
                android:textColor="#979796"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_resend_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/gotham_medium"
                android:includeFontPadding="false"
                android:text="@string/resend_otp"
                android:textColor="@color/btn_bg"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="14sp"
                android:padding="10dp"
                android:textColor="@color/btn_bg"
                android:fontFamily="@font/gotham_light"
                android:includeFontPadding="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_otp"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:background="@color/btn_bg"
                android:fontFamily="@font/gotham_medium"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:text="Confirm" />
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
</RelativeLayout>