<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:id="@+id/lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/img_lyt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/login_bg">
            <TextView
                android:fontFamily="@font/bebas_regular"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:text="Login Pin"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_bg"
                android:textSize="40sp"
                android:textStyle="bold"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mpin_lyt"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <EditText
                                android:fontFamily="@font/gotham_medium"
                                android:includeFontPadding="false"
                                android:id="@+id/et_1"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:background="@drawable/et_border_white"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textSize="14sp"
                                android:textAlignment="center" />

                            <EditText
                                android:id="@+id/et_2"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/et_border_white"
                                android:fontFamily="@font/gotham_medium"
                                android:includeFontPadding="false"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                            <EditText
                                android:inputType="numberPassword"
                                android:fontFamily="@font/gotham_medium"
                                android:includeFontPadding="false"
                                android:id="@+id/et_3"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:background="@drawable/et_border_white"
                                android:textSize="14sp"
                                android:maxLength="1"
                                android:textAlignment="center" />

                            <EditText
                                android:fontFamily="@font/gotham_medium"
                                android:includeFontPadding="false"
                                android:id="@+id/et_4"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:background="@drawable/et_border_white"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textSize="14sp"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <TextView
                            android:fontFamily="@font/gotham_light"
                            android:includeFontPadding="false"
                            android:id="@+id/tv_forgot_mpin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:padding="15dp"
                            android:text="@string/forgot_your_pin"
                            android:textAlignment="center"
                            android:textColor="@color/btn_bg"
                            android:textSize="12sp" />


                        <TextView
                            android:fontFamily="@font/gotham_medium"
                            android:includeFontPadding="false"
                            android:id="@+id/btn_biometric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="100dp"
                            android:text="Use FingerPrint"
                            android:textAlignment="center"
                            android:textColor="@color/brownish_grey"/>

                    </LinearLayout>



                    <!--  <TextView
                          android:id="@+id/tv_or"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="20dp"
                          android:fontFamily="@font/gothambook"
                          android:lineSpacingExtra="8sp"
                          android:text="OR"
                          android:textAlignment="center"
                          android:textColor="@color/txt_color"
                          android:textSize="10sp" />-->


                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>