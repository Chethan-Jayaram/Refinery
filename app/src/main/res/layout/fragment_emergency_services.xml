<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_above="@+id/tv_emergency_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/bebas_regular"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4sp"
            android:text="@string/safety_in_the_hotel"
            android:textColor="@color/brownish_grey"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textSize="28sp"/>

        <GridView
            android:id="@+id/emergency_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@+id/tv_header_view"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:columnWidth="200dp"
            android:horizontalSpacing="25dp"
            android:numColumns="3"
            android:verticalSpacing="25dp" />

    </RelativeLayout>
    <TextView
        android:fontFamily="@font/gotham_medium"
        android:id="@+id/tv_emergency_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/brownish_grey"
        android:gravity="center_vertical"
        android:text="@string/inform_us"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
</RelativeLayout>