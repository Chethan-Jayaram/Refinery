<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/bebas_regular"
                android:includeFontPadding="false"
                android:text="@string/set_your_mpin"
                android:textAlignment="center"
                android:textColor="@color/btn_bg"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/gotham_light"
                android:includeFontPadding="false"
                android:text="@string/please_set_your_4_digit_mpin"
                android:textAlignment="center"
                android:textColor="#979796"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/bebas_regular"
                android:includeFontPadding="false"
                android:text="@string/create_mpin"
                android:textAlignment="center"
                android:textColor="@color/btn_bg"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et1_one"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"

                    android:background="@drawable/et_border_white"
                    android:fontFamily="@font/gotham_medium"
                    android:includeFontPadding="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et1_two"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_border_white"
                    android:fontFamily="@font/gotham_medium"
                    android:includeFontPadding="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et1_three"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/et_border_white"
                    android:fontFamily="@font/gotham_medium"
                    android:includeFontPadding="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et1_four"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/et_border_white"
                    android:fontFamily="@font/gotham_medium"
                    android:includeFontPadding="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/bebas_regular"
                android:includeFontPadding="false"
                android:text="@string/re_type_mpin"
                android:textAlignment="center"
                android:textColor="@color/btn_bg"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et2_one"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/et_border_white"
                    android:fontFamily="@font/gotham_medium"
                    android:includeFontPadding="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et2_two"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/et_border_white"
                    android:fontFamily="@font/gotham_medium"
                    android:includeFontPadding="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et2_three"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/et_border_white"
                    android:fontFamily="@font/gotham_medium"
                    android:includeFontPadding="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et2_four"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/et_border_white"
                    android:fontFamily="@font/gotham_medium"
                    android:imeOptions="actionDone"
                    android:includeFontPadding="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_mpin"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="80dp"
                android:background="@color/btn_bg"
                android:fontFamily="@font/gotham_medium"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:text="Confirm" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
